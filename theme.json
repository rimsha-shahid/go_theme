{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "defaultPalette": false,
      "palette": [
        { "slug": "g-white", "color": "rgb(255,255,255)", "name": "Gosign White" },
        { "slug": "g-gray-100", "color": "rgb(243 244 246)", "name": "Gosign Gray 100" },
        { "slug": "g-gray-200", "color": "rgb(229 231 235)", "name": "Gosign Gray 200" },
        { "slug": "g-gray-300", "color": "rgb(209 213 219)", "name": "Gosign Gray 300" },
        { "slug": "g-gray-400", "color": "rgb(156 163 175)", "name": "Gosign Gray 400" },
        { "slug": "g-gray-500", "color": "rgb(107 114 128)", "name": "Gosign Gray 500" },
        { "slug": "g-gray-600", "color": "rgb(75 85 99)", "name": "Gosign Gray 600" },
        { "slug": "g-gray-700", "color": "rgb(55 65 81)", "name": "Gosign Gray 700" },
        { "slug": "g-gray-800", "color": "rgb(31 41 55)", "name": "Gosign Gray 800" },
        { "slug": "g-gray-900", "color": "rgb(17 24 39)", "name": "Gosign Gray 900" },
        { "slug": "g-primary", "color": "rgb(239 68 68)", "name": "Gosign Primary" },
        { "slug": "g-accent", "color": "rgb(67 56 202)", "name": "Gosign Accent" },
        { "slug": "g-success", "color": "rgb(52 211 153)", "name": "Gosign Success" },
        { "slug": "g-info", "color": "rgb(96 165 250)", "name": "Gosign Info" },
        { "slug": "g-warning", "color": "rgb(251 146 60)", "name": "Gosign Warning" },
        { "slug": "g-danger", "color": "rgb(236 72 153)", "name": "Gosign Danger" }
      ],
      "background": true,
      "text": true,
      "link": true,
      "custom": true,
      "duotone": [
        { "slug": "g-pink-sunset", "colors": ["#11245e", "#dc4379"], "name": "Gosign Pink Sunset" }
      ],
      "defaultGradients": false,
      "gradients": [
        {
          "slug": "g-summer-dog",
          "name": "Gosign Summer Dog",
          "gradient": "linear-gradient(#a8ff78, #78ffd6)"
        }
      ]
    },
    "blocks": {
      "core/site-title": {
        "color": {
          "defaultPalette": true,
          "palette": [
            { "slug": "g-primary", "color": "#ef4444", "name": "Gosign Primary" }
          ],
          "link": true,
          "custom": false,
          "gradients": [],
          "customGradient": false
        },
        "typography": {
          "fontFamilies": [
            { 
              "fontFamily": "Pacifico, sans-serif", 
              "slug": "g-pacifico",
              "name": "Gosign Pacifico" 
            }
          ]
        }
      },
      "core/cover": {
        "color": {
          "duotone": [],
          "customDuotone": false
        }
      },
      "core/preformatted": {
        "typography": {
          "fontSizes": [],
          "customFontSize": false
        }
      }
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "typography": {
      "fontFamilies": [
        { 
          "fontFamily": "Rubik, sans-serif", 
          "slug": "g-rubik",
          "name": "Gosign Rubik" 
        }
      ],
      "fontSizes": [
        { "slug": "small", "size": "0.75rem", "name": "Small" },
        { "slug": "medium", "size": "1.25rem", "name": "Medium" },
        { "slug": "large", "size": "2.25rem", "name": "Large" },
        { "slug": "x-large", "size": "3rem", "name": "Extra Large" },
        { "slug": "gigantic", "size": "3.75rem", "name": "Gigantic" }
      ],
      "lineHeight": true,
      "dropCap": true,
      "fontWeight": true,
      "fontStyle": true,
      "textTransform": true,
      "letterSpacing": true,
      "textDecoration": true
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1100px"
    },
    "spacing": {
      "margin": true,
      "padding": true,
      "units": [
        "px", "rem", "vh", "vw", "%"
      ],
      "blockGap": true
    }
  },
  "styles": {
    "color": {
      "text": "var(--wp--preset--color--g-gray-700)",
      "background": "var(--wp--preset--color--g-white)"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--g-primary)"
        }
      }
    },
    "blocks": {
      "core/button": {
        "color": {
          "gradient": "var(--wp--preset--gradient--g-summer-dog)"
        }
      },
      "core/pullquote": {
        "border": {
          "width": "2px",
          "radius": "10px",
          "style": "solid",
          "color": "var(--wp--preset--color--g-primary)"
        }
      },
      "core/site-title": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--g-pacifico)"
        }
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--g-rubik)",
      "fontSize": "16px",
      "fontStyle": "normal",
      "fontWeight": "normal",
      "lineHeight": "inherit",
      "textDecoration": "none",
      "textTransform": "none"
    },
    "spacing": {
      "margin": {
        "top": "0px",
        "bottom": "0px",
        "left": "0px",
        "right": "0px"
      },
      "padding": {
        "top": "0px",
        "bottom": "0px",
        "left": "0px",
        "right": "0px"
      },
      "blockGap": "4rem"
    }
  }
}